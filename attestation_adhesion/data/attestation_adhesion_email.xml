<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
	<data>
		<record id="mail_template_adhesions" model="mail.template">
			<field name="name">Email Template For Adhesions</field>
			<field name="model_id" ref="model_attestation_adhesion"/>
			<field name="email_from">{{object.customer_id.email}}</field>
			<field name="email_to">{{object.customer_id.email}}</field>
      <field name="subject">Adhesion</field>
			<field name="body_html" type="html">
				<div style="margin: 0px; padding: 0px;">
					<div style="justify-content: center;background-color: #714B67; padding:0.6rem;padding-left: 35px;text-decoration: none; color: #fff; border-radius: 5px; font-size:13px;width:40%">
            <h2><t> Hi, </t><t t-out="object.customer_id.name"/> </h2>
						<div>
              <h3><t>Vous trouverez votre attestation d'adhésion en pièce jointe de ce mail</t></h3>
						</div>
					</div>
					<br/>
					<br/>
          <t>Cordialement,</t>
					<br/>
					<br/>
				</div>
			</field>
		</record>
	</data>
</odoo>
