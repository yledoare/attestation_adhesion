<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="attestation_adhesion_report">
    <t t-call="web.html_container">
      <t t-foreach="docs" t-as="doc">
        <t t-call="web.external_layout">
          <div class="text-center">
            <h2>Adhésion</h2>
          </div>
          <div>
            <br/>
            <br/>
			  <br/><br/>
          </div>
          <div class="row" style="margin-left:500px;">
		  <strong><span t-field="doc.name_of_customer"/></strong>
            <br/>
            <br/>
          </div>
          <p><span t-field="doc.customer_id.title"/>, </p>
          <p><t>I, the undersigned </t><span t-field="doc.name_of_customer"/><t>, owner of the accommodation located </t><t> declares having received </t><span t-field="doc.name_of_customer"/><t>, the sum of </t><span t-options='{"widget": "float", "precision": 2}' t-field="doc.amount"/> <span t-field="doc.name_of_customer" />
            <t>, for the payment of rent and charges for the rental period of the month</t>
            <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%B')"/>
            <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y')"/>
            <t> and gives him a receipt, subject to all my rights.</t>
          </p>
          <h3 class="text-center">
            <t>Details of the regulations : </t>
          </h3>
          <div style="margin-left:200px;">
            <p>
              <strong>
                <t>Adhésion:</t>
              </strong>
	      <span t-options='{"widget": "float", "precision": 2}' t-field="doc.amount"/> <span t-field="doc.currency" />
            </p>
            <p>
              <strong>
                <t>Provision for charges:</t>
              </strong>
            </p>
            <p>
              <strong>
                <t>Total rent :</t>
              </strong>
            </p>
	    <p>
		    <strong><t>Payment date : </t></strong>
		    <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y')"/>
	    </p>
          </div>
          <div>
		  <p>
			  <t>I thank you in advance and please accept the expression of my most distinguished sentiments.</t>
			  <br/><br/>
			  <t>, the </t>
			  <strong><span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y')"/><br/></strong>
		  </p>
          </div>
        </t>
      </t>
    </t>
  </template>
</odoo>
