<odoo>
    <data>
        <!-- Inherit the form view of res.partner -->
        <record id="view_partner_form_inherited" model="ir.ui.view">
            <field name="name">res.partner.form.inherited</field>
            <field name="model">res.partner</field> <!-- SPECIFIY LE MODEL -->
            <field name="inherit_id" ref="base.view_partner_form"/> <!-- HÃ©ritage de la view-->
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page name="property" string="Organization">
                        <group>
                           <field name="organization_title" />
                           <field name="organization_season" />
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
